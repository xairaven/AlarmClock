<UserControl x:Class="Lab3.Views.Controls.CustomTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Lab3.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="32px">
    <StackPanel Style="{StaticResource TitleBarPanel}">
        <Button Style="{StaticResource TitleBarIcons}"
                Click="Minimize_Window">
            <Image Source="../../Assets/WindowsIcons/Minimize.png" />
        </Button>
        <Button Style="{StaticResource TitleBarIcons}"
                Click="Resize_Window">
            <Image Source="../../Assets/WindowsIcons/Restore.png" />
        </Button>
        <Button Style="{StaticResource TitleBarIcons}"
                Click="Exit_Window">
            <Image Source="../../Assets/WindowsIcons/Close.png" />
        </Button>
    </StackPanel>
</UserControl>