<Window x:Class="Lab2.Views.Task1.DockPanelTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Lab2.Views.Task1"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Task 1 | DockPanel" Height="250" Width="500">
    <DockPanel LastChildFill="False">
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center">Label</Label>
        <TextBox DockPanel.Dock="Left" Width="200">TextBox</TextBox>
        <TextBox DockPanel.Dock="Right" Width="200">TextBox</TextBox>
        <Button DockPanel.Dock="Bottom" Margin="0 0 0 35" Height="20" Width="70">Button</Button>
    </DockPanel>
</Window>
